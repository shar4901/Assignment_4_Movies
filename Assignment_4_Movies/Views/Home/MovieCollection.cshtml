@{
    ViewData["Title"] = "Movie Collection";
}

@model Assignment_4_Movies.Models.MovieModel;

<div>
    <h1>@ViewData["Title"]</h1>
    <br />

    <div class="container">
        <form method="post" display="inline-block">

            <input type="hidden" asp-for="Movie_id" />

            <label asp-for="Title">Title: </label>
            <input asp-for="Title" type="text" />

            <br />

            <label asp-for="Year">Year: </label>
            <input asp-for="Year" type="number" min="1900" max="2025" />
            <br />

            <label asp-for="Director">Director: </label>
            <input asp-for="Director" type="text" />
            <br />


            <label asp-for="Category_id">Category: </label>
            <select asp for="category_id">
                @foreach (Category c in ViewBag.Categories)
                {
                    <option value="@c.Category_id">@c.Category_name</option>
                }
            </select>
            <br />


            <label asp-for="Rating">Rating: </label>
            <select asp-for="Rating">
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
            <br />

            <label asp-for="Edited">Edited: </label>
            <select asp-for="Edited">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <br />

            <label asp-for="Lent_to">Lent to: </label>
            <input asp-for="Lent_to" type="text" />
            <br />

            <label asp-for="Notes">Notes: </label>
            <input asp-for="Notes" type="text" />
            <br />

            <button action="submit">Submit</button>
            <br />
            <div class="font-weight-bold alert-warning" style="font-family:'Baskerville Old Face'; " asp-validation-summary="All"></div>
        </form>
    </div>
</div>
