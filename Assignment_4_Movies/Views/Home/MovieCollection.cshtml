@{
    ViewData["Title"] = "Movie Collection";
}

@model Assignment_4_Movies.Models.MovieModel;

<div>
    <h1>@ViewData["Title"]</h1>
    <br />

    <div class="container">
        <form method="post" display="inline-block">



            @if (ViewBag.Edit == true)
            {
                <input type="hidden" asp-for="MovieId" />
            }



            <label asp-for="Title">Title: </label>
            <input asp-for="Title" type="text" />

            <br />

            <label asp-for="Year">Year: </label>
            <input asp-for="Year" type="number" min="1850" max="2025" />
            <br />

            <label asp-for="Director">Director: </label>
            <input asp-for="Director" type="text" />
            <br />


            <label asp-for="CategoryId">Category: </label>
            <select asp-for="CategoryId">
                <option value="">--Select Category--</option>
                @foreach (Category c in ViewBag.Categories)
                {
                    <option value="@c.CategoryId">@c.Category_name</option>
                }
            </select>
            <br />


            <label asp-for="Rating">Rating: </label>
            <select asp-for="Rating">
                <option value="">--Select Rating--</option>

                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
            <br />

            <label asp-for="Rating">Edited: </label>
            <select asp-for="Edited">
                <option value="">--Select if Edited--</option>

                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <br />

            <label asp-for="Edited">Lent to: </label>
            <input asp-for="Lent_to" type="text" />
            <br />

            <label asp-for="Rating">Notes: </label>
            <input asp-for="Edited" type="text" />
            <br />

            <button action="submit">Submit</button>
            <br />
            <div class="font-weight-bold alert-warning" style="font-family:'Baskerville Old Face'; " asp-validation-summary="All"></div>
        </form>
    </div>
</div>
